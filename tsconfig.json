{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["es2021"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "typeRoots": [
      "./vendor/@types",
      "./node_modules/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
